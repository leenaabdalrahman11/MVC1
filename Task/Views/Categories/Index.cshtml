
<Doctype html>
    <html>

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Users</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="container">
            <h1 class="mt-4">GetAll</h1>
        </div>
        <a href="/categories/create">Create Category</a>
        <ul>

            @foreach (var item in @Model)
            {
                <li>@item.Name 
                    <a href="/categories/details/@item.Id">Details</a>
                    <a href="/categories/delete/@item.Id"> Delete</a>
                    <a asp-controller="Categories" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>

                </li>

            }

        </ul>
    </body>
</html>
